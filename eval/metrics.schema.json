{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FI Evaluation Metrics",
  "version": "1.1.0",
  "description": "Golden Set evaluation results schema for FI-OBS-RES-001",
  "type": "object",
  "properties": {
    "run_id": {
      "type": "string",
      "description": "Unique run identifier (run_YYYYMMDD_HHMMSS)"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO8601 timestamp"
    },
    "model_id": {
      "type": "string",
      "description": "LLM model identifier"
    },
    "total_prompts": {
      "type": "integer",
      "minimum": 0
    },
    "results": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "prompt_id": {
            "type": "string"
          },
          "category": {
            "type": "string",
            "enum": ["technical_query", "workflow", "architecture", "philosophy", "troubleshooting", "best_practices", "security", "performance", "integration", "edge_cases"]
          },
          "metrics": {
            "type": "object",
            "properties": {
              "adequacy": {
                "type": "number",
                "minimum": 0,
                "maximum": 1,
                "description": "Response adequacy score (0-1)"
              },
              "factuality": {
                "type": "number",
                "minimum": 0,
                "maximum": 1,
                "description": "Factual accuracy score (0-1)"
              },
              "latency_ms": {
                "type": "integer",
                "minimum": 0,
                "description": "Response latency in milliseconds"
              },
              "cost_usd": {
                "type": "number",
                "minimum": 0,
                "description": "API call cost in USD"
              },
              "tokens_in": {
                "type": "integer",
                "minimum": 0
              },
              "tokens_out": {
                "type": "integer",
                "minimum": 0
              },
              "keywords_matched": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Expected keywords found in response"
              }
            },
            "required": ["adequacy", "factuality", "latency_ms", "cost_usd"]
          }
        },
        "required": ["prompt_id", "category", "metrics"]
      }
    },
    "aggregates": {
      "type": "object",
      "properties": {
        "avg_adequacy": {
          "type": "number"
        },
        "avg_factuality": {
          "type": "number"
        },
        "p50_latency_ms": {
          "type": "integer"
        },
        "p95_latency_ms": {
          "type": "integer"
        },
        "p99_latency_ms": {
          "type": "integer"
        },
        "total_cost_usd": {
          "type": "number"
        },
        "total_tokens": {
          "type": "integer"
        }
      },
      "required": ["avg_adequacy", "avg_factuality", "p95_latency_ms", "total_cost_usd"]
    }
  },
  "required": ["run_id", "timestamp", "model_id", "total_prompts", "results", "aggregates"]
}
