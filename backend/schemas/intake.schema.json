{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://free-intelligence.health/schemas/intake.schema.json",
  "title": "Medical Intake Data",
  "description": "Structured medical intake data collected by IntakeCoach",
  "type": "object",
  "required": ["demographics", "chief_complaint", "symptoms", "urgency"],
  "properties": {
    "demographics": {
      "type": "object",
      "required": ["name", "age"],
      "properties": {
        "name": {"type": "string", "minLength": 1, "maxLength": 100},
        "age": {"type": "integer", "minimum": 0, "maximum": 150},
        "gender": {"type": "string", "enum": ["male", "female", "other", "prefer_not_to_say"]}
      }
    },
    "chief_complaint": {"type": "string", "minLength": 5, "maxLength": 500},
    "symptoms": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["description", "onset", "severity"],
        "properties": {
          "description": {"type": "string"},
          "onset": {"type": "string"},
          "severity": {"type": "integer", "minimum": 1, "maximum": 10}
        }
      }
    },
    "urgency": {
      "type": "object",
      "required": ["level", "reasoning"],
      "properties": {
        "level": {"type": "string", "enum": ["LOW", "MODERATE", "HIGH", "CRITICAL"]},
        "reasoning": {"type": "string"}
      }
    }
  }
}
