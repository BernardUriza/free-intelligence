# pnpm configuration optimized for NAS
# Reduces disk I/O and network usage

# Store configuration
store-dir=~/.pnpm-store
cache-dir=~/.pnpm-cache

# Package installation optimizations
prefer-frozen-lockfile=true
strict-peer-dependencies=false
auto-install-peers=true

# Network optimizations
fetch-retries=3
fetch-retry-mintimeout=10000
fetch-timeout=60000

# Build optimizations
save-exact=true
engine-strict=true

# Hoist patterns (reduce duplicate installs)
hoist=true
shamefully-hoist=true

# Logging
loglevel=warn
