# Free Intelligence â€” Prometheus Alert Rules
# Derived from error_budgets.yaml

groups:
  - name: fi_slo_alerts
    interval: 30s
    rules:
      # Timeline API
      - alert: TimelineAPIHighLatency
        expr: histogram_quantile(0.95, rate(fi_timeline_api_latency_seconds_bucket[5m])) > 0.3
        for: 5m
        labels:
          severity: warning
          service: timeline_api
        annotations:
          summary: "Timeline API P95 latency exceeds 300ms SLO"
          description: "P95 latency is {{ $value }}ms (SLO: 300ms)"

      - alert: TimelineAPIErrorRateHigh
        expr: rate(fi_timeline_api_errors_total[5m]) / rate(fi_timeline_api_requests_total[5m]) > 0.001
        for: 2m
        labels:
          severity: critical
          service: timeline_api
        annotations:
          summary: "Timeline API error rate exceeds SLO (99.9%)"
          description: "Error rate is {{ $value | humanizePercentage }}"

      # Ingestion API
      - alert: IngestionAPIHighLatency
        expr: histogram_quantile(0.95, rate(fi_ingestion_api_latency_seconds_bucket[5m])) > 2.0
        for: 5m
        labels:
          severity: warning
          service: ingestion_api
        annotations:
          summary: "Ingestion API P95 latency exceeds 2s SLO"
          description: "P95 latency is {{ $value }}s (SLO: 2s)"

      - alert: IngestionAPIErrorRateHigh
        expr: rate(fi_ingestion_api_errors_total[5m]) / rate(fi_ingestion_api_requests_total[5m]) > 0.005
        for: 2m
        labels:
          severity: critical
          service: ingestion_api
        annotations:
          summary: "Ingestion API error rate exceeds SLO (99.5%)"
          description: "Error rate is {{ $value | humanizePercentage }}"

      # Export API
      - alert: ExportAPIHighLatency
        expr: histogram_quantile(0.95, rate(fi_export_api_latency_seconds_bucket[5m])) > 5.0
        for: 10m
        labels:
          severity: warning
          service: export_api
        annotations:
          summary: "Export API P95 latency exceeds 5s SLO"
          description: "P95 latency is {{ $value }}s (SLO: 5s)"

      # Error Budget
      - alert: ErrorBudgetExhausted
        expr: fi_error_budget_remaining < 0.1
        for: 5m
        labels:
          severity: critical
        annotations:
          summary: "Error budget <10% remaining for {{ $labels.service }}"
          description: "Only {{ $value | humanizePercentage }} budget left. Consider release freeze."

      # Corpus Health
      - alert: CorpusLockContention
        expr: rate(fi_corpus_lock_wait_seconds_total[5m]) > 10
        for: 2m
        labels:
          severity: warning
        annotations:
          summary: "High corpus lock contention detected"
          description: "{{ $value }} lock waits/sec observed"

      - alert: DiskSpaceCritical
        expr: (1 - (node_filesystem_avail_bytes{mountpoint="/storage"} / node_filesystem_size_bytes{mountpoint="/storage"})) > 0.90
        for: 5m
        labels:
          severity: critical
        annotations:
          summary: "Disk space >90% on /storage"
          description: "{{ $value | humanizePercentage }} disk usage. Exports may fail."

      # LLM API
      - alert: LLMAPIRateLimited
        expr: rate(fi_llm_api_429_errors_total[5m]) > 0.1
        for: 1m
        labels:
          severity: warning
        annotations:
          summary: "LLM API rate limiting detected"
          description: "{{ $value }} 429 errors/sec. Enable fallback routing."

      - alert: LLMAPIUnavailable
        expr: up{job="fi_llm_adapter"} == 0
        for: 2m
        labels:
          severity: critical
        annotations:
          summary: "LLM API adapter is down"
          description: "Enable circuit breaker and fallback to local model."
